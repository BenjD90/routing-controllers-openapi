    "@types/node": "^8.0.53",
    "@types/prettier": "^1.8.0",
    "@types/reflect-metadata": "^0.0.5",
    "@types/rimraf": "^2.0.2",
    "jest": "^21.2.1",
    "prettier": "1.8.2",
    "rimraf": "^2.6.2",
    "ts-jest": "^21.2.3",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0",
    "tslint-config-standard": "^7.0.0",
    "tsutils": "^2.12.2",
    "typescript": "^2.6.1"
